.chat_box{data: {message: {id: message.id}}}
  .chat_box__top
    .chat_box__top__name
      = message.user.name
    .chat_box__top__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .chat_box__content
    - if message.content.present?
      %p.chat_box__content__comment
        = message.content
    = image_tag message.image.url, class: 'chat_box__content__image' if message.image.present?

